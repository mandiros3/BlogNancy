@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<System.Collections.Generic.IList<MicroBlog.Models.Post>>
    
@{

    Layout = "Views/Layouts/Master.cshtml";
    ViewBag.Title = "Home";
}

<h2>Post</h2>
@foreach (var item in  Model)
{
    <h3>@item.Title</h3>
    <p>@item.Content</p>
    <a id="editPost" href="/posts/@item.ID">Edit</a>
   
    <a id="deletePost" href="/posts/@item.ID">Delete</a>
}


<script type="text/javascript">

    $("#editPost").click();



</script>
