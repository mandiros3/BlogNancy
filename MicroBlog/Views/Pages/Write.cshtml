@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<MicroBlog.Models.Post>
@{
    Layout = "Views/Layouts/Master.cshtml";
    ViewBag.Title = "Write";

    //Write and Edit are similar but slightly different. 
   // I could improve by using a partial to display common components, or just style both with css.
}

<h1>Write</h1>

<form class="form-vertical" method="POST" action="/posts/new">
    <section class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" value="@Model.Title" />
    </section>
    <section class="form-group">
        <label for="content">Text</label>
        <textarea class="form-control post" rows="15" name="content" value="@Model.Content"></textarea>
    </section>
    <button type="submit" class="btn btn-default">Save</button>
    <button class="btn btn-danger" type="reset">Reset</button>

</form>